<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <Button
            android:id="@+id/create_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/button_style_account_create"
            android:text="Creer un compte" />

        <Button
            android:id="@+id/info_compte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/button_style_account_create"
            android:text="Info Compte" />

        <Button
            android:id="@+id/search_people"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/button_style_account_create"
            android:text="Chercher des gens" />

        <Button
            android:id="@+id/send_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_style_account_create"
            android:text="arreter de Chercher" />

        <TextView
            android:id="@+id/client_co"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:text="Non connectÃ©" />

        <Button
            android:id="@+id/button_co"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="se Connecter" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>